<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:orientation="vertical"
        android:background="#2A2A2A">

    <ScrollView
            android:id="@+id/fragment_comic_view_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#2A2A2A"
            >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

            <!-- Comic Cover Avatar -->
            <ImageView
                    android:id="@+id/comicCoverImage"
                    android:layout_width="200dp"
                    android:layout_height="300dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:background="@drawable/field_bg"
                    android:contentDescription="Comic Cover"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="16dp"/>

            <!-- Comic Name -->
            <TextView
                    android:id="@+id/comicTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Comic Title"
                    android:background="@drawable/field_bg"
                    android:textColor="@color/white"
                    android:padding="12dp"
                    android:layout_marginBottom="12dp"/>

            <!-- Comic Deck -->
            <TextView
                    android:id="@+id/comicDeck"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="150dp"
                    android:hint="Comic Deck"
                    android:background="@drawable/field_bg"
                    android:textColor="@color/white"
                    android:padding="12dp"
                    android:layout_marginBottom="12dp"
                    android:overScrollMode="always"
                    android:scrollbarStyle="insideInset"
                    android:scrollbars="vertical"/>

            <!-- Comic Description -->
            <TextView
                    android:id="@+id/comicDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="150dp"
                    android:hint="Comic Description"
                    android:background="@drawable/field_bg"
                    android:textColor="@color/white"
                    android:padding="12dp"
                    android:layout_marginBottom="12dp"
                    android:overScrollMode="always"
                    android:scrollbarStyle="insideInset"
                    android:scrollbars="vertical"/>

            <!-- Comic Publisher -->
            <TextView
                    android:id="@+id/comicPublishers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Publisher"
                    android:background="@drawable/field_bg"
                    android:textColor="@color/white"
                    android:padding="12dp"
                    android:layout_marginBottom="12dp"/>

            <!-- Issue Number -->
            <TextView
                    android:id="@+id/comicIssueNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Issue #"
                    android:background="@drawable/field_bg"
                    android:textColor="@color/white"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>