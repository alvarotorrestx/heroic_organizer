<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/library_testing_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#555555"
        android:padding="16dp">

    <!-- Folder container wrapper -->
    <GridLayout
            android:id="@+id/folderContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:orientation="horizontal"
            android:padding="8dp"
            android:alignmentMode="alignMargins"
            android:rowOrderPreserved="false">

        <!-- Actual folder card -->
        <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                android:background="@color/black"
                android:elevation="4dp">

            <ImageView
                    android:id="@+id/folderCoverImage"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:scaleType="centerCrop"
                    android:background="@color/black"/>

            <!-- Text overlay -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="#80000000"
                    android:padding="8dp">

                <TextView
                        android:id="@+id/folderName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Folder Name"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                <TextView
                        android:id="@+id/folderComicCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 Comics"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"/>

            </LinearLayout> <!-- Text overlay end -->

        </FrameLayout> <!-- Folder card end -->

    </GridLayout> <!-- Folder container wrapper end -->

</ScrollView>
