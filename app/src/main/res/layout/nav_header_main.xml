<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:gravity="center_horizontal"
>

    <!-- Title -->
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <android.widget.Button
                android:id="@+id/btn_close_drawer"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:text="Back"
                android:contentDescription="Close Menu"
                android:textColor="@color/white"
                android:background="@drawable/btn_bg"
                android:scaleX="1.25" android:scaleY="1.25"
                android:layout_marginTop="24dp" android:layout_marginLeft="24dp"/>


    </LinearLayout>
    <TextView
            android:id="@+id/title_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menu"
            android:textColor="#FFF"
            android:textSize="24sp"
            android:layout_marginTop="2dp"/>

    <!-- Logo -->
    <ImageView
            android:id="@+id/logo_view"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="4dp"
            app:srcCompat="@mipmap/ic_launcher" android:layout_marginBottom="24dp"/>
</LinearLayout>
