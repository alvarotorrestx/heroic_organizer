<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/settings_container"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#2A2A2A"
              android:orientation="vertical"
              >
    <android.widget.Button

            android:id="@+id/btn_close_settings"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:text="Back"
            android:textColor="@color/white"
            android:contentDescription="Close Menu"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="24dp"
            android:background="@drawable/btn_bg"
            android:scaleX="1.25" android:scaleY="1.25"/>

    <TextView
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textColor="#FFF"
            android:textAlignment="center"
            android:textSize="24sp"
            android:layout_marginBottom="16dp" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

        <LinearLayout
                android:id="@+id/pref_app"
                style="@style/SettingsItem">

            <ImageView
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:src="@drawable/preferences_icon"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="App Preferences"
                    android:textColor="#FFF"
                    android:textSize="24sp"/>
        </LinearLayout>

        <View style="@style/SettingsDivider"/>

        <LinearLayout
                android:id="@+id/pref_notifications"
                style="@style/SettingsItem">

            <ImageView
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:src="@drawable/notifications_icon"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notifications"
                    android:textColor="#FFF"
                    android:textSize="24sp"/>
        </LinearLayout>

        <View style="@style/SettingsDivider"/>

        <LinearLayout
                android:id="@+id/pref_accessibility"
                style="@style/SettingsItem">

            <ImageView
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:src="@drawable/accessibility_icon"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Accessibility"
                    android:textColor="#FFF"
                    android:textSize="24sp"/>
        </LinearLayout>

        <View style="@style/SettingsDivider"/>

        <LinearLayout
                android:id="@+id/pref_help"
                style="@style/SettingsItem">

            <ImageView
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:src="@drawable/help_icon"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Help"
                    android:textColor="#FFF"
                    android:textSize="24sp"/>
        </LinearLayout>

        <View style="@style/SettingsDivider"/>

        <LinearLayout
                android:id="@+id/pref_activity_log"
                style="@style/SettingsItem">

            <ImageView
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:src="@drawable/activitylog_icon"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Activity Log"
                    android:textColor="#FFF"
                    android:textSize="24sp"/>
        </LinearLayout>

        <View style="@style/SettingsDivider"/>

        <LinearLayout
                android:id="@+id/pref_account"
                style="@style/SettingsItem">

            <ImageView
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:src="@drawable/account_icon"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Account Settings"
                    android:textColor="#FFF"
                    android:textSize="24sp"/>
        </LinearLayout>

        <View style="@style/SettingsDivider"/>

        <LinearLayout
                android:id="@+id/pref_logout"
                style="@style/SettingsItem">

            <ImageView
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:src="@drawable/logout_icon"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Logout"
                    android:textColor="#FFF"
                    android:textSize="24sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
