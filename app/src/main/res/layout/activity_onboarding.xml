<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".ui.login.Onboarding" android:background="@drawable/h_o_bgimage">


    <LinearLayout
            android:id="@+id/loginForm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="276dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="349dp">

        <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/prompt_email"
                android:inputType="textEmailAddress"
                android:backgroundTint="@color/white"
                android:textColor="@color/white" android:minHeight="48dp" tools:ignore="Autofill"/>

        <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/prompt_password"
                android:inputType="textPassword"
                android:backgroundTint="@color/white"
                android:textColor="@color/white" android:minHeight="48dp" tools:ignore="Autofill"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/registerForm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="291dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="244dp"
            tools:visibility="visible">

        <EditText
                android:id="@+id/createFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="First Name"
                android:backgroundTint="@color/white"
                android:textColor="@color/white" android:minHeight="48dp"/>

        <EditText
                android:id="@+id/createLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Last Name"
                android:backgroundTint="@color/white"
                android:textColor="@color/white" android:minHeight="48dp"/>

        <EditText
                android:id="@+id/dateOfBirth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Date of Birth"
                android:focusable="false"
                android:clickable="true"
                android:inputType="none"
                android:backgroundTint="@color/white"
                android:textColor="@color/white" android:minHeight="48dp"/>

        <EditText
                android:id="@+id/createUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Create Username"
                android:backgroundTint="@color/white"
                android:textColor="@color/white" android:minHeight="48dp" tools:ignore="Autofill"/>

        <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:backgroundTint="@color/white"
                android:textColor="@color/white" android:minHeight="48dp" tools:ignore="Autofill"/>

        <EditText
                android:id="@+id/createPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword"
                android:backgroundTint="@color/white"
                android:textColor="@color/white" android:minHeight="48dp" tools:ignore="Autofill"/>

        <EditText
                android:id="@+id/confirmPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:backgroundTint="@color/white"
                android:textColor="@color/white" android:minHeight="48dp" tools:ignore="Autofill"/>
    </LinearLayout>

    <Button
            android:enabled="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="575dp"
            android:layout_marginBottom="92dp"
            android:text="@string/action_sign_in"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.851" android:id="@+id/Login"
            android:backgroundTint="#4C0945" android:textColor="@color/white" app:strokeColor="@color/white"
            app:strokeWidth="2.5sp" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:enabled="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginBottom="28dp"
            android:text="@string/action_register"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/Register"
            android:backgroundTint="#4C0945" android:textColor="@color/white"
            app:strokeWidth="2.5sp" app:strokeColor="@color/white" tools:ignore="DuplicateClickableBoundsCheck"/>
    <Button
            android:id="@+id/submitRegister" android:visibility="gone"
            android:enabled="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginBottom="28dp"
            android:text="@string/action_register"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:backgroundTint="#4C0945" android:textColor="@color/white"
            app:strokeWidth="2.5sp" app:strokeColor="@color/white"/>
    <ProgressBar
            android:id="@+id/loading"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="64dp"
            android:layout_marginBottom="64dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3" tools:layout_editor_absoluteX="16dp"
            tools:ignore="MissingConstraints"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="409dp"
            android:layout_height="335dp"
            android:id="@+id/App_Title" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="214dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="166dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="3dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.5"
            android:visibility="visible">

        <TextView
                android:text="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/Title"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="157dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="159dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="175dp" android:layout_marginEnd="176dp"
                app:layout_constraintEnd_toEndOf="parent" tools:text="Heroic Organizer"
                app:layout_constraintVertical_bias="1.0"
                android:textColor="@color/white" android:textSize="48sp" android:shadowColor="@color/black"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="20"/>
        <TextView
                android:text="@string/app_slogan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/Slogan"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.494"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="98dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="218dp" tools:text="Your Personal Comic Collection Hub"
                app:layout_constraintVertical_bias="0.0" android:textSize="20sp" android:textColor="@color/white"
                android:shadowColor="@color/black" android:shadowDx="0" android:shadowDy="0"
                android:shadowRadius="20"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>