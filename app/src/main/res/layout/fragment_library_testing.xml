<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/library_testing_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#555555"
        android:padding="16dp">

    <!-- Folder container wrapper -->
    <GridLayout
            android:id="@+id/folderContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:orientation="horizontal"
            android:padding="8dp"
            android:alignmentMode="alignMargins"
            android:rowOrderPreserved="false">

        <!-- Comic Cover Image -->
        <ImageView
                android:id="@+id/comicCoverImage"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:scaleType="fitCenter"
                android:src="@drawable/sample_cover"
                android:contentDescription="Comic Cover Image"
                android:layout_margin="8dp"/>

        <!-- Comic Title Text -->
        <TextView
                android:id="@+id/comicTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comic Title"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:padding="8dp"
                android:layout_gravity="center"/>

        <TextView
                android:id="@+id/issueNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Issue #"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:padding="8dp"
                android:layout_gravity="center"/>


    </GridLayout>
    <!-- Folder container wrapper end -->

</ScrollView>
