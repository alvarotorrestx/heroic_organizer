<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <!-- App Bar Layout -->
    <com.google.android.material.appbar.AppBarLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:theme="@style/Theme.HeroicOrganizer.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/Theme.HeroicOrganizer.PopupOverlay"
                android:layout_height="?attr/actionBarSize"/>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Dashboard UI -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/dark_purple"
            android:gravity="center">

        <TextView
                android:id="@+id/menu_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menu"
                android:textSize="24sp"
                android:textColor="@color/white"
                android:gravity="center"/>

        <ImageView
                android:id="@+id/menu_icon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_book"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

            <Button
                    android:id="@+id/btn_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:drawableStart="@drawable/ic_home"/>

            <Button
                    android:id="@+id/btn_library"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Library"
                    android:drawableStart="@drawable/ic_library"/>

            <Button
                    android:id="@+id/btn_wishlist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Wishlist"
                    android:drawableStart="@drawable/ic_wishlist"/>

            <Button
                    android:id="@+id/btn_store_locator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Store Locator"
                    android:drawableStart="@drawable/ic_store"/>

            <Button
                    android:id="@+id/btn_scan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Scan Comic Covers"
                    android:drawableStart="@drawable/ic_scan"/>

            <Button
                    android:id="@+id/btn_logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Logout"
                    android:drawableStart="@drawable/ic_logout"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="@dimen/fab_margin"
            android:layout_marginBottom="16dp"
            app:srcCompat="@android:drawable/ic_dialog_email"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
